<div class="flex justify-center items-center h-screen bg-gray-900">
  <form
    action="/register"
    method="POST"
    class="flex flex-col bg-white p-8 rounded-lg shadow-lg w-full max-w-md"
  >
    <h1 class="mb-5 font-normal text-2xl">Criar Conta</h1>

    <label class="text-gray-800 mb-2" for="username">Usuário</label>
    <input
      type="text"
      name="username"
      id=""
      class="mb-4 border border-gray-300 text-gray-900 bg-gray-100 p-2 rounded-md focus:outline-none"
      placeholder="Insira seu nome de usuário"
      required
    />

    <label class="text-gray-800 mb-2" for="email">Email</label>
    <input
      type="email"
      name="email"
      id=""
      class="mb-4 border border-gray-300 text-gray-900 bg-gray-100 p-2 rounded-md focus:outline-none"
      placeholder="Insira seu email"
      required
    />

    <label class="text-gray-800 mb-2" for="password">Senha</label>
    <input
      type="password"
      name="password"
      id=""
      class="mb-4 border border-gray-300 text-gray-900 bg-gray-100 p-2 rounded-md focus:outline-none"
      placeholder="Insira sua senha"
      required
    />

    <button
      type="submit"
      class="bg-red-600 hover:bg-red-700 text-white mt-5 p-3 rounded-lg uppercase font-semibold tracking-wide hover:shadow-red-600/40"
    >
      Cadastrar
    </button>

    {{#if errorMessage}}
      <span class="text-center mt-5 text-red-500">{{errorMessage}}</span>
    {{/if}}
  </form>
</div>